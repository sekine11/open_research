<% if question.status == "accepting" %>
	<%= link_to question_path(:id => question.id, :status => "completed"), method: :put, remote: true, class: "btn btn-light font-weight-bold" do %>
		<i class="fas fa-check"></i>
	<% end %>
<% else %>
	<%= link_to question_path(:id => question.id, :status => "accepting"), method: :put, remote: true, class: "btn btn-secondary font-weight-bold" do %>
		<i class="fas fa-check"></i>
	<% end %>
<% end %>