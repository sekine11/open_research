<% if question.status == "accepting" %>
	<%= link_to "「解決済み」にする", question_path(:id => question.id, :status => "completed"), method: :put, remote: true, class: "btn btn-light font-weight-bold" %>
<% else %>
	<%= link_to "「受付中」に戻す", question_path(:id => question.id, :status => "accepting"), method: :put, remote: true, class: "btn btn-secondary font-weight-bold" %>
<% end %>