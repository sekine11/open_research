<% content_for :title do %>
	<% if params[:tag] %>
		<%= params[:tag] %>を含む質問一覧
	<% elsif params[:q] != nil %>
		検索結果
	<% else %>
		質問一覧
	<% end %>
<% end %>
<div class="container-fluid my-4">
	<div class="row">

		<div class="d-none d-sm-none d-md-none d-lg-block col-2">
			<div class="list-group">
				<%= render "share/tags", tags: @tags, model: Question %>
			</div>
		</div>

		<div class="d-flex d-sm-flex d-md-flex d-lg-none col-12">
			<div class="w-100 tags-list flex border-bottom pb-4">
				<%= render "share/tags_for_sw", tags: @tags, model: Question %>
			</div>
		</div>

		<div class="col-12 col-md-9 col-lg-7">
			<main class="">
				<div id="questions">
					<%= render "share/questions", questions: @questions %>
				</div>
			</main>
		</div>

		<div class="d-none d-sm-none d-md-block col-3">
			<table class="table">
				<thead class="bg-warning">
					<tr>
						<th class="text-center text-light" colspan="2">人気の質問</th>
					</tr>
				</thead>
				<tbody>
					<%= render "share/ranking", rank_items: @rank_questions %>
				</tbody>
			</table>
		</div>

	</div>
</div>