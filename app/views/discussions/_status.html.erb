<% if discussion.status == "active" %>
	<%= link_to "「終了」にする", discussion_path(:id => discussion.id, :status => "inactive"), remote: true, method: :put, class: "btn btn-light font-weight-bold" %>
<% else %>
	<%= link_to "「活動中」に戻す", discussion_path(:id => discussion.id, :status => "active"), remote: true, method: :put, class: "btn btn-secondary font-weight-bold" %>
<% end %>