<% content_for :title do %>
	<% if params[:tag] %>
		<%= params[:tag] %>を含む議論一覧
	<% elsif params[:q] != nil %>
		検索結果
	<% else %>
		議論一覧
	<% end %>
<% end %>
<div class="container-fluid my-4">
	<div class="row">
		<div class="d-none d-sm-none d-md-none d-lg-block col-2">
			<div class="list-group">
				<% @tags.each do |tag| %>
					<% if params[:tag] == tag.name %>
						<%= link_to discussions_path(:tag => tag.name), class: "list-group-item list-group-item-action active" do %>
							<%= tag.name %> <span class="badge badge-pill badge-info"><%= Discussion.tagged_with(tag).select {|tag| tag}.size %></span>
						<% end %>
					<% else %>
						<%= link_to discussions_path(:tag => tag.name), class: "list-group-item list-group-item-action" do %>
							<%= tag.name %> <span class="badge badge-pill badge-info"><%= Discussion.tagged_with(tag).select {|tag| tag}.size %></span>
						<% end %>
					<% end %>
				<% end %>
			</div>
		</div>
		<div class="d-flex d-sm-flex d-md-flex d-lg-none col-12">
			<div class="w-100 tags-list flex border-bottom pb-4">
				<% @tags.each do |tag| %>
					<% if params[:tag] == tag.name %>
						<div class="p-2">
							<%= link_to discussions_path(:tag => tag.name), class: "px-2 active" do %>
								<%= tag.name %> <span class="badge badge-pill badge-info"><%= Discussion.tagged_with(tag).select {|tag| tag}.size %></span>
							<% end %>
						</div>
					<% else %>
						<div class="p-2">
							<%= link_to discussions_path(:tag => tag.name), class: "" do %>
								<%= tag.name %> <span class="badge badge-pill badge-info"><%= Discussion.tagged_with(tag).select {|tag| tag}.size %></span>
							<% end %>
						</div>
					<% end %>
				<% end %>
			</div>
		</div>
		<div class="col-12 col-md-9 col-lg-7">
			<main class="">
				<div id="discussions">
					<%= render "share/discussions", discussions: @discussions %>
				</div>
			</main>
		</div>
		<div class="d-none d-sm-none d-md-block col-md-3">
			<table class="table">
				<thead class="bg-info">
					<tr>
						<th class="text-center text-light" colspan="2">人気の議論</th>
					</tr>
				</thead>
				<tbody>
					<%= render "share/ranking", rank_items: @rank_discussions %>
				</tbody>
			</table>
		</div>
	</div>
</div>