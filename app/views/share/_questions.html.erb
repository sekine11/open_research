<% questions.each do |question| %>
	<div class="border-bottom p-3 row">
		<div class="col-12 flex justify-content-between align-items-center">
			<h3 class="h5 font-weight-bold"><%= link_to question.subject.truncate(35), question_path(question), class: "text-body link" %></h3>
			<% if question.status_i18n == "受付中" %>
				<p class="font-weight-bold bg-success p-2 m-0 text-light rounded"><%= question.status_i18n %></p>
			<% else %>
				<p class="font-weight-bold bg-secondary p-2 m-0 text-light rounded"><%= question.status_i18n %></p>
			<% end %>
		</div>
		<div class="col-12 mb-2 mt-n1">
			<% question.question_counts.each do |tag| %>
				<span class="badge badge-pill badge-warning mx-1"><%= tag.name %></span>
			<% end %>
		</div>
		<div class="col-12 flex justify-content-between align-items-center">
			<div class="">
				<span class="text-dark mr-2">投稿者：<%= question.user.public_name %></span>
				<span class="text-dark mr-2">コメント数：<%= question.ques_comments.count %></span>
				<span class="text-dark">お気に入り数：<%= question.ques_favorites.count %></span>
			</div>
			<span class="text-dark font-weight-bold">ああああ</span>
		</div>
	</div>
<% end %>
<div class="flex justify-content-center mt-4"><%= paginate questions, remote: true, param_name: :question_page %></div>