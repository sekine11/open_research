<div id="" class="row border-bottom">
			<%= form_with(model: comment, url: laboratory_lab_information_lab_information_comments_path(laboratory,lab_information), html: { class: "col-12" }) do |f| %>
				<%= render 'layouts/error_messages', model: f.object %>
				<div class="form-group">
					<%= f.text_area :content, class: "form-control" %>
				</div>
				<div class="form-group text-right">
					<%= f.submit "コメント", class: "btn btn-success" %>
				</div>
			<% end %>
		</div>
		<% lab_information.lab_information_comments.includes([:user]).each do |comment| %>
			<div class="my-4 border-bottom">
				<div class="flex justify-content-between mb-4">
					<div class="flex align-items-center">
						<%= attachment_image_tag(comment.user, :image, :fill, 50, 50, fallback: "no-image-mini.jpg", class: "rounded-circle mr-4 align-bottom", size: "50x50") %>
						<p class="m-0 mr-4 font-weight-bold text-dark"><%= comment.user.private_name %></p>
						<p class="m-0 font-weight-bold text-dark"><%= comment.created_at %></p>
					</div>
					<div>
						<%= link_to "削除", laboratory_lab_information_lab_information_comment_path(laboratory,lab_information,comment), method: :delete, remote: true, class: "btn btn-danger" %>
					</div>
				</div>
				<p class="mb-4"><%= comment.content %></p>
			</div>
		<% end %>