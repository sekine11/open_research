<div class="row m-4">

<%= form_with(model: @lab_information, url: laboratory_lab_informations_path(@laboratory), local: true, html: { class: "col-12 col-md-8 offset-md-2 mt-3" }) do |f| %>
	<%= render 'layouts/error_messages', model: f.object %>

	<div class="form-group">
		<%= f.label :subject, "題名（内容が分かりやすいもので30文字以内）" %>
		<%= f.text_field :subject, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :content, "内容" %>
		<%= f.text_area :content, class: "form-control vh-100" %>
	</div>

	<div class="form-group">
		<%= f.attachment_field :document %>
	</div>

	<div class="form-group">
		<%= f.submit "お知らせを投稿", class: "btn btn-success" %>
	</div>

<% end %>

</div>
