<div class="container-fluid my-4">
	<div class="row">
		<div class="col-12">
			<table class="table table-hover">
				<thead class="thead-dark">
					<tr>
						<th class="align-middle" colspan="2">お知らせ一覧</th>
						<th class="text-right" colspan="2"><%= link_to "お知らせを投稿", new_laboratory_lab_information_path(@laboratory), class: "btn btn-info btn-sm" %></th>
					</tr>
				</thead>
				<tbody class="border-bottom">
					<% @lab_informations.each do |information| %>
						<tr>
							<td>
								<%= link_to laboratory_lab_information_path(@laboratory,information) ,class: "font-weight-bold text-body link" do %>
									<%= information.subject %>
								<% end %>
							</td>
							<td>
								<div class="">
									<span class="badge badge-info"><i class="fas fa-check"></i> <%= information.lab_information_checks.select {|check| check}.size %></span>
									<span class="badge badge-success"><i class="fas fa-comment"></i> <%= information.lab_information_comments.select {|comment| comment}.size %></span>
								</div>
							</td>
							<td><i class="fas fa-user"></i> <%= information.user.private_name %></td>
							<td class="text-right">
								<i class="fas fa-clock"></i> 
								<%= information.updated_at.strftime("%Y/%m/%d %H:%M") %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<div class="pagination justify-content-center mt-4 col-12">
				<%= paginate @lab_informations, class: "" %>
			</div>
		</div>
	</div>
</div>