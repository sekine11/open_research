<div class="container-fluid my-4">
  <div class="row">
  
  <%= form_with(model: @user, local: true, url: reactive_path, method: :post, html: { class: "col-12 col-md-8 offset-md-2 mt-3" }) do |f| %>
  
    <div class="form-group">
      <%= f.email_field :email, autocomplete: "email", placeholder: "以前のメールアドレス", class: "form-control" %>
     </div>
  
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "以前のパスワード", class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "以前の確認パスワード", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "再登録", class: "btn btn-success" %>
    </div>
  
  <% end %>
  
  </div>
</div>