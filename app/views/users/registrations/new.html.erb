<% content_for :title do %>
  新規登録
<% end %>
<div class="container-fluid my-4">
  <div class="row">
    <h2 class="col-12 col-md-6 offset-md-3">新規登録</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "col-12 col-md-6 offset-md-3" }) do |f| %>
      <%= render "layouts/error_messages", model: resource %>
    
      <div class="form-group">
        <%= f.text_field :public_name, autofocus: true, placeholder: "公開される名前", class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.text_field :private_name, placeholder: "公開されない名前", class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード（6文字以上）", class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認パスワード", class: "form-control" %>
      </div>
    
      <div class="actions text-center">
        <%= f.submit "登録する", class: "btn btn-success" %>
      </div>
    
      <%= link_to "一度退会した方はこちら" ,reregistration_path, class: "nav-link text-right" %>
    <% end %>
  </div>
</div>
